# LiteLLM Multi-Tenant Gateway Environment Variables
# Copy this file to .env and fill in your actual values

# Master Keys
LITELLM_MASTER_KEY=sk-litellm-master-key-change-me
LITELLM_SALT_KEY=your-salt-key-for-encryption
JWT_SECRET=your-jwt-secret-for-auth

# Database Configuration
DB_PASSWORD=secure-postgres-password
DATABASE_URL=postgresql://litellm:${DB_PASSWORD}@postgres:5432/litellm

# Redis Configuration
REDIS_URL=redis://redis:6379

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_ORG_ID=org-your-org-id

# OpenRouter Configuration
OPENROUTER_API_KEY=sk-or-your-openrouter-key

# Azure OpenAI Configuration
AZURE_API_KEY=your-azure-api-key
AZURE_API_BASE=https://your-resource.openai.azure.com
AZURE_API_VERSION=2024-08-01-preview

# Amazon Bedrock Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Anthropic Configuration (for direct access)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Grafana Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=secure-grafana-password

# PgAdmin Configuration
PGADMIN_EMAIL=admin@litellm.local
PGADMIN_PASSWORD=secure-pgadmin-password

# Tenant API Keys (generate unique keys for each tenant)
TENANT_ENGINEERING_KEY=sk-eng-unique-api-key
TENANT_RESEARCH_KEY=sk-res-unique-api-key
TENANT_OPERATIONS_KEY=sk-ops-unique-api-key

# Monitoring & Alerting
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
PAGERDUTY_API_KEY=your-pagerduty-key
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM=alerts@litellm.local
EMAIL_TO=devops@company.com

# Feature Flags
ENABLE_MULTI_TENANT=true
ENABLE_COST_TRACKING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_PII_DETECTION=false
ENABLE_MODEL_BENCHMARKING=true
ENABLE_AUTO_SCALING=false

# Performance Tuning
MAX_WORKERS=4
WORKER_TIMEOUT=300
KEEPALIVE_TIMEOUT=65
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50

# Security
CORS_ORIGINS=["http://localhost:3000", "https://app.company.com"]
TRUSTED_PROXIES=["127.0.0.1", "10.0.0.0/8"]
SSL_CERT_PATH=/etc/ssl/certs/litellm.crt
SSL_KEY_PATH=/etc/ssl/private/litellm.key

# Development Settings (set to false in production)
DEBUG=false
RELOAD=false
LOG_LEVEL=INFO